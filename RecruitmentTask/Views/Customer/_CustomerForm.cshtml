@model RecruitmentTask.Models.Customer

<div class="form-group">
    @Html.LabelFor(m => m.Name)
    @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @placeholder = "Text only" })
    @Html.ValidationMessageFor(m => m.Name)
</div>
<div class="form-group">
    @Html.LabelFor(m => m.Surname)
    @Html.TextBoxFor(m => m.Surname, new { @class = "form-control", @placeholder = "Text only" })
    @Html.ValidationMessageFor(m => m.Surname)
</div>
<div class="form-group">
    @Html.LabelFor(m => m.Telephone)
    @Html.TextBoxFor(m => m.Telephone, new { @class = "form-control" , @placeholder = "Numbers only" })
    @Html.ValidationMessageFor(m => m.Telephone)
</div>
<div class="form-group">
    @Html.LabelFor(m => m.Address)
    @Html.TextBoxFor(m => m.Address, new { @class = "form-control" })
    @Html.ValidationMessageFor(m => m.Address)
</div>